<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Name: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tableName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Key: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/primaryKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query Creation: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/queryCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch Size: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/batchSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Field: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Method: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated Date Sync: "
            android:textColor="@color/ir_black_main"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/updatedDateSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ir_black_main"
            android:textSize="18sp" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp" />

</LinearLayout>